{
    "name": "@ods/server",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "clean": "rimraf dist node_modules",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "migrate:dev": "dotenv -e .env -- pnpm dlx sequelize-cli db:migrate --debug",
        "migrate:rollback": "dotenv -e .env -- pnpm dlx sequelize-cli db:migrate:undo",
        "seed:dev": "dotenv -e .env -- sequelize-cli db:seed:all --debug",
        "gen:migration": "pnpm dlx sequelize-cli migration:generate --name",
        "gen:seeder": "pnpm dlx sequelize-cli seed:generate --name",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "tsc:check": "tsc --noEmit"
    },
    "dependencies": {
        "@apollo/server": "^4.12.0",
        "@biomejs/biome": "^1.9.4",
        "@nestjs/apollo": "^13.1.0",
        "@nestjs/common": "^11.1.0",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.0",
        "@nestjs/graphql": "^13.1.0",
        "@nestjs/mapped-types": "^2.1.0",
        "@nestjs/platform-express": "^11.1.0",
        "@nestjs/sequelize": "^11.0.0",
        "@ods/server-lib": "workspace:*",
        "@swc/core": "^1.11.24",
        "chalk": "^5.4.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cli-table3": "^0.6.5",
        "effect": "^3.14.21",
        "figlet": "^1.8.1",
        "graphql": "^16.11.0",
        "graphql-subscriptions": "^3.0.0",
        "nestjs-config-zod-validation": "^1.1.1",
        "pg": "^8.15.6",
        "pg-hstore": "^2.3.4",
        "reflect-metadata": "^0.2.2",
        "remeda": "^2.21.3",
        "rxjs": "^7.8.2",
        "sequelize": "^6.37.7",
        "sequelize-typescript": "^2.1.6",
        "ts-morph": "^25.0.1",
        "ts-pattern": "^5.7.0",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.0",
        "@types/express": "^5.0.1",
        "@types/figlet": "^1.7.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.17",
        "@types/sequelize": "^4.28.20",
        "@types/supertest": "^6.0.3",
        "dotenv-cli": "^8.0.0",
        "jest": "^29.7.0",
        "sequelize-cli": "^6.6.3",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.2",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
